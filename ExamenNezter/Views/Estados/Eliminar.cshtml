@model ExamenNezter.Models.EstadosModel

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Está seguro que desea eliminar este registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>

    @using (Html.BeginForm("Borrar","Estados"))
    {
    <form asp-action="Borrar">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <hr />
        <a asp-action="Index">Regresar a la lista</a>
        <input asp-for="Id" class="form-control" hidden readonly/>
    </form>
    }
</div>
